<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.14.0.xsd">
    <jdbc>
        <driver>org.mariadb.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/citronella</url>
        <user>root</user>
        <password>citronelladbpass</password>
    </jdbc>
    <generator>
        <name>org.jooq.codegen.DefaultGenerator</name>
        <database>
            <name>org.jooq.meta.mariadb.MariaDBDatabase</name>
            <includes>
                user
                |project
            </includes>
            <forcedTypes>
                <forcedType>
                    <name>varchar</name>
                    <includeExpression>.*</includeExpression>
                    <includeTypes>JSONB?</includeTypes>
                </forcedType>
                <forcedType>
                    <name>varchar</name>
                    <includeExpression>.*</includeExpression>
                    <includeTypes>INET</includeTypes>
                </forcedType>
            </forcedTypes>
        </database>

        <generate>
            <deprecated>false</deprecated>
            <records>true</records>
            <immutablePojos>true</immutablePojos>
            <fluentSetters>true</fluentSetters>
        </generate>
        <target>
            <packageName>com.lorenjamison.citronella.data.generated</packageName>
            <directory>src/main/java</directory>
        </target>
        <strategy>
            <name>org.jooq.codegen.DefaultGeneratorStrategy</name>
        </strategy>
    </generator>
</configuration>